{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "moduleSuffixes": [".native", ".web", ""]
  },
  "include": ["App.tsx", "src/**/*"],
  "exclude": ["node_modules"]
}
